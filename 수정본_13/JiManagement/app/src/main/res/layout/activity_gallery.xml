<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.park.management.GalleryActivity">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/instaView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            app:srcCompat="@drawable/ic_apps_black_24dp"
            android:id="@+id/imageView"
            android:background="#85C1E9"
            android:onClick="imageClick"
            android:visibility="visible"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Instagram\n#alpa1104"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000"
            android:background="#ffffff"/>
    </LinearLayout>

</RelativeLayout>

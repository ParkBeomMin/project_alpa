<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#85C1E9"
    tools:context="com.example.park.management.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idText"
        android:hint="ID"
        android:layout_alignTop="@+id/validatebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/idText"
        android:layout_alignRight="@+id/idText"
        android:layout_alignEnd="@+id/idText"
        android:id="@+id/passwordText"
        android:hint="password"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordText"
        android:id="@+id/password2Text"
        android:hint="confirm password"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_alignRight="@+id/passwordText"
        android:layout_alignEnd="@+id/passwordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/password2Text"
        android:layout_alignLeft="@+id/password2Text"
        android:layout_alignStart="@+id/password2Text"
        android:id="@+id/nameText"
        android:hint="name"
        android:layout_alignRight="@+id/password2Text"
        android:layout_alignEnd="@+id/password2Text" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:id="@+id/studentnumberspinner"
        android:layout_alignRight="@+id/nameText"
        android:layout_alignEnd="@+id/nameText" />

    <Button
        android:text="register"
        android:bottomRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerbutton"
        android:layout_below="@+id/studentnumberspinner"
        android:layout_alignLeft="@+id/studentnumberspinner"
        android:layout_alignStart="@+id/studentnumberspinner"
        android:layout_alignRight="@+id/studentnumberspinner"
        android:layout_alignEnd="@+id/studentnumberspinner"
        android:background="#76D7C4" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/alpalogo"
        android:id="@+id/imageView2"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText"
        android:layout_alignRight="@+id/idText"
        android:layout_alignEnd="@+id/idText"
        android:layout_above="@+id/password2Text" />

    <Button
        android:text="check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/validatebutton"
        android:hint="check"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/idText"
        android:layout_toEndOf="@+id/idText"
        android:background="#00000000"
        android:textSize="10sp"
/>
</RelativeLayout>
